<%= form_with(model: @rental, local: true ) do |form| %>
  <% if @rental.errors.any? %>
    <div id="error_explanation">
      <h2><%= @rental.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @rental.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="rental">
    <%= form.label :lending_start_date %>
    <%= form.date_field :lending_start_date %>
  </div>
  <div class="rental">
    <%= form.label :lending_end_date %>
    <%= form.date_field :lending_end_date %>
  </div>
  <%= form.submit %>
<% end %>
<%= link_to "図書一覧画面にもどる", books_path %>
