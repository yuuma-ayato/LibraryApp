<h1>図書一覧</h1>
<p><%= notice %></p>
<table>
  <tr>
    <th>タイトル</th>
    <th>著者</th>
    <th>内容</th>
    <th>貸出日</th>
    <th>返却予定日</th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.author %></td>
    <td><%= book.content %></td>
    <% book.rentals.each do |rental| %>
    <td><%= rental.lending_start_date %></td>
    <td><%= rental.lending_end_date %></td>
    <% end %>
    <td><%= link_to '詳細', book_path(book.id) %></td>
    <td><%= link_to "編集", edit_book_path(book.id), data: { confirm: '本当に編集していいですか？' } %></td>
    <td><%= link_to '削除', book_path(book.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></td>
    <td><%= link_to '貸出', new_rental_path(book) %></td>
  </tr>
  <% end %>
</table>
<%= link_to '新しく本を登録する', new_book_path %>
